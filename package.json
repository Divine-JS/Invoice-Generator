{
  "name": "invoice-generator",
  "version": "1.0.0",
  "type": "module",
  "description": "Professional invoice generator web application with PDF export, client management, and customizable templates",
  "author": {
    "name": "Invoice Generator Team"
  },
  "license": "MIT",
  "private": false,
  "keywords": [
    "invoice",
    "generator",
    "pdf",
    "business",
    "billing",
    "invoice-generator",
    "invoice-template"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/invoice-generator"
  },
  "bugs": {
    "url": "https://github.com/yourusername/invoice-generator/issues"
  },
  "homepage": "https://invoice-generator.com",
  "main": "src/index.html",
  "scripts": {
    "dev": "vite",
    "start": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint src/**/*.js",
    "format": "prettier --write \"src/**/*.{js,html,css}\"",
    "test": "vitest",
    "prepare": "husky install",
    "analyze": "vite build --mode analyze",
    "deploy": "vercel deploy --prod"
  },
  "dependencies": {
    "jspdf": "^2.5.1",
    "jspdf-autotable": "^3.8.2",
    "sweetalert2": "^11.10.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "eslint": "^9.0.0",
    "globals": "^14.0.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "rollup-plugin-visualizer": "^5.12.0",
    "terser": "^5.39.2",
    "vercel": "^41.7.8",
    "vite": "^5.1.4",
    "vitest": "^1.3.1"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{js,css,md,html}": "prettier --write"
  }
}
